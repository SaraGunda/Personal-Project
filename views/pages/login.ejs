<%- include('../partials/head') -%> <%- include('../partials/navbar') -%>

<div class="loginContainer">
  <form action="" method="POST">
    <h1>Login</h1>
    <div class="form-group">
      <label for="email"
        >Email Address <span class="form-group-required">*</span></label
      >
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Your email address"
        minlength="4"
        required
      />
    </div>
    <div class="form-group">
      <label for="password"
        >Password <span class="form-group-required">*</span></label
      >
      <input
        type="password"
        name="password"
        id="password"
        placeholder="*******"
        minlength="8"
        required
      />
    </div>
    <button type="submit">Submit</button>
  </form>
  <h2 class="text-center">OR</h2>
  <p><a href="/auth/google" class="btn">Login with Google</a></p>
  <p>
    Don't Have An Account? <a href="/register" class="btn">Create one here.</a>
  </p>
</div>
<%- include('../partials/footer') -%>
