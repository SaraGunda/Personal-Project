<%- include('../partials/head') -%> <%- include('../partials/navbar') -%>

<div class="loginContainer">
  <form action="/login" method="POST">
    <h1>Login</h1>
    <div class="form-group">
      <label for="username"
        >Username<span class="form-group-required">*</span></label
      >
      <input
        type="username"
        name="username"
        id="username"
        placeholder="Your username"
        minlength="4"
        required
      />
    </div>
    <div class="form-group">
      <label for="password"
        >Password <span class="form-group-required">*</span></label
      >
      <input
        type="password"
        name="password"
        id="password"
        placeholder="*******"
        minlength="8"
        required
      />
    </div>
    <button type="submit">Submit</button>
  </form>
  <div class="googleContainer">
    <h2>OR</h2>
    <p><a href="/auth/google" class="btn">Login with Google</a></p>
    <p>
      Don't Have An Account?
      <a href="/register" class="btn">Create one here.</a>
    </p>
  </div>
</div>
<%- include('../partials/footer') -%>
