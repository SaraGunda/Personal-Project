<%- include('../partials/head') -%> <%- include('../partials/navbar') -%>

<div class="loginContainer">
  <form action="" method="POST">
    <h1>Register</h1>
    <div class="form-group">
      <label for="email"
        >Email Address <span class="form-group-required">*</span></label
      >
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Your email address"
        minlength="4"
        required
      />
    </div>
    <div class="form-group">
      <label for="password"
        >Password <span class="form-group-required">*</span></label
      >
      <input
        type="password"
        name="password"
        id="password"
        placeholder="*******"
        minlength="8"
        required
      />
    </div>
    <button type="submit">Submit</button>
  </form>
  <div class="googleContainer">
    <h2>OR</h2>
    <p><a href="/auth/google" class="btn">Register with Google</a></p>
  </div>
</div>
<%- include('../partials/footer') -%>
