<%- include('../partials/head') -%> <%- include('../partials/navbar') -%>

<div class="loginContainer">
  <form action="/register" method="POST">
    <h1>Register</h1>
    <div class="form-group">
      <label for="firstName"
        >First Name <span class="form-group-required">*</span></label
      >
      <input
        type="firstName"
        name="firstName"
        id="firstName"
        placeholder="First Name"
        minlength="1"
        required
      />
      <label for="lastName"
        >Last Name <span class="form-group-required">*</span></label
      >
      <input
        type="lastName"
        name="lastName"
        id="lastName"
        placeholder="Last Name"
        minlength="1"
        required
      />
      <label for="username"
        >Email Address <span class="form-group-required">*</span></label
      >
      <input
        type="username"
        name="username"
        id="username"
        placeholder="Your email address"
        minlength="4"
        required
      />
    </div>
    <div class="form-group">
      <label for="password"
        >Password <span class="form-group-required">*</span></label
      >
      <input
        type="password"
        name="password"
        id="password"
        placeholder="*******"
        minlength="8"
        required
      />
    </div>
    <button type="submit">Submit</button>
  </form>
  <div class="googleContainer">
    <h2>OR</h2>
    <p><a href="/auth/google" class="btn">Register with Google</a></p>
  </div>
</div>
<%- include('../partials/footer') -%>
